-->>>>>>>>>>> TRIGGER

CREATE OR REPLACE TRIGGER UPDATE_AGE_EMPLOYEE
BEFORE INSERT ON EMPLOYEE_
FOR EACH ROW
BEGIN
  :new.age := TRUNC(MONTHS_BETWEEN(SYSDATE, :new.dateBirth) / 12);
END;
/

