TYPE ORACLE_LOADER
DEFAULT DIRECTORY Location_Directory
Access parameters (
RECORDS DELIMITED BY NEWLINE
FIELDS TERMINATED BY ';'
)
LOCATION('TransactionNames.csv')
);

